{{!-- Login Modal --}}
<div class="modal fade" id="loginModal" tabindex="-1" aria-labelledby="loginModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="loginModalLabel">Enter Information to Login</h5>
      </div>
      <div class="modal-body">
        {{> login-form}}
      </div>
      <div class="modal-footer">
        <button id="loginCancel" type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button id="loginSubmit" type="submit" class="btn btn-primary">Login</button>
      </div>
    </div>
  </div>
</div>
