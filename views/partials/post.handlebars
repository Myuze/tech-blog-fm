<div class="card my-3 mx-auto" style="width: 90%;">
  <div class="card-body p-0">
    <h5 class="card-header bg-secondary">{{ title }}</h5>
    <p class="card-text p-3">{{ content }}</p>
    <div class="d-flex flex-row justify-content-between card-footer">
      <p class="card-text">Author: {{ Blogger.username }}</p>
      <p class="card-text">Created: {{ format_created updatedAt }}</p>
    </div>
  </div>
</div>
