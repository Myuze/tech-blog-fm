{{!-- Update comment Modal --}}

<div class="modal fade" id="updateCommentModal" tabindex="-1" aria-labelledby="updateCommentModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="updateCommentModalLabel">Update a Comment</h5>
      </div>
      <div class="modal-body">
        {{> comment-form username=username}}
      </div>
      <div class="modal-footer">
        <button id="updateCommentModalCancel" type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button id="updateCommentModalSubmit" type="submit" class="btn btn-primary">Update</button>
      </div>
    </div>
  </div>
</div>
