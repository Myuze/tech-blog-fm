<section>
    <div class="card text-center">
        <div class="card-header">
            <img src="https://images-wixmp-ed30a86b8c4ca887773594c2.wixmp.com/f/5a4f1717-428c-47e7-b94f-673135d73112/dbj2mik-50a094f5-9bb6-47c5-9a78-20622c65bf29.png/v1/fill/w_1024,h_265,strp/header___nier__automata___2b___collab___may_by_oonadileeoo_dbj2mik-fullview.png?token=eyJ0eXAiOiJKV1QiLCJhbGciOiJIUzI1NiJ9..pCDIT4h5c3MR_ScAj7vGQTv61w-76TXPLAKEJwI6MIM" class="img-fluid" alt="Nier Header">
        </div>
        <div class="card-body mb-3">
            <h1 class="card-title">Welcome to Tech Blog FM</h1>
            {{#unless loggedIn}}
            <p class="card-text">Login to post a blog.</p>
            {{/unless}}
        </div>
    </div>
    {{#unless loggedIn}}
    <div class="d-grid gap-2 col-6 mt-5 mx-auto">
        <button id="homeLoginBtn" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#loginModal" type="button">Login</button>
    </div>
    {{/unless}}
</section>
<section>
    <div class="d-grid col12">
        <h2 class="mt-3 p-3">Latest Posts</h2>
        {{#if loggedIn}}
        <button id="homeNewPostBtn" class="btn btn-primary d-grid gap-2 col-6 mt-3 mx-auto" data-bs-toggle="modal" data-bs-target="#postModal">New Post</button>
        {{/if}}
    </div>
    <div class="d-flex flex-column-reverse mt-3 post-container">
        {{#each blogs as |blog| }}
        {{> post }}
        {{/each}}
    </div>
</section>
{{> login-modal}}
{{> post-modal}}
<script src="/js/login.js"></script>
<script src="/js/post.js"></script>
